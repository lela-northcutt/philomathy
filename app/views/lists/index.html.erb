<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <% link_to 'Show', list %>
          <% link_to 'Edit', edit_list_path(list) %>
          <td><center><%= link_to 'delete', list, method: :delete, data: { confirm: 'Are you sure?'} %></center></td>
        </tr>
      <% else %>
      <tr>
        <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
        <% link_to 'Show', list %>
        <% link_to 'Edit', edit_list_path(list) %>
        <td><center><%= link_to 'delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add item', new_list_path, class: 'btn btn-primary' %>
